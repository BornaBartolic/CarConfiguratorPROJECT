@using CarConfigPROJECTmvc.ViewModels
@using CarConfigPROJECTmvc.ViewModels.ComponentCompatibility
@model ComponentCompatibilityVM

@{
    ViewData["Title"] = "Edit Component Compatibility";
}

@section Styles {
    <link rel="stylesheet" href="~/css/_theme.css" />
    <link rel="stylesheet" href="~/css/components/components.css" />
}

<div class="page components-page">

    <div class="topbar">
        <h1 class="page-title">Edit Compatibility</h1>
        <a asp-action="Index" class="btn btn-outline-primary">Back to List</a>
    </div>

    <div class="card-surface" style="padding:20px;">
        <form asp-action="Edit" method="post" class="components-form">
            @Html.AntiForgeryToken()
            <input type="hidden" asp-for="Id" />

            <div asp-validation-summary="ModelOnly" class="text-danger"></div>

            <div class="form-group">
                <label asp-for="CarComponentId1" class="control-label"></label>
                <!-- FIRST dropdown: ONLY Car Types -->
                <select asp-for="CarComponentId1" class="form-control" asp-items="Model.CarTypes">
                    <option value="">-- Select Car Type --</option>
                </select>
                <span asp-validation-for="CarComponentId1" class="text-danger"></span>
            </div>

            <div class="form-group" style="margin-top:10px;">
                <label asp-for="CarComponentId2" class="control-label"></label>
                <!-- SECOND dropdown: All NON-CarType components -->
                <select asp-for="CarComponentId2" class="form-control" asp-items="Model.Components">
                    <option value="">-- Select Component --</option>
                </select>
                <span asp-validation-for="CarComponentId2" class="text-danger"></span>
            </div>

            <div style="margin-top:14px; display:flex; gap:10px; flex-wrap:wrap;">
                <button type="submit" class="btn btn-primary">Save</button>
                <a asp-action="Index" class="btn btn-outline-primary">Cancel</a>
            </div>
        </form>
    </div>

</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
