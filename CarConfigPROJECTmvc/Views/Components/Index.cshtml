@using CarConfigPROJECTmvc.ViewModels.Component
@model IEnumerable<ComponentVM>

@{
    ViewData["Title"] = "Components";
}

@section Styles {
    <link rel="stylesheet" href="~/css/_theme.css" />
    <link rel="stylesheet" href="~/css/components/components.css" />
}

<div class="page components-page">

    <div class="topbar">
        <h1 class="page-title">Components</h1>

        <a asp-action="Create" class="btn btn-outline-primary">
            Create New Component
        </a>
    </div>

    <form method="get" class="filters mb-3">
        <div class="form-group me-2">
            <input type="text"
                   name="searchString"
                   value="@ViewBag.SearchString"
                   placeholder="Search by name"
                   class="form-control" />
        </div>

        <div class="form-group me-2">
            <select name="typeFilter"
                    class="form-control"
                    asp-items="ViewBag.ComponentTypes">
                <option value="">-- All Types --</option>
            </select>
        </div>

        <button type="submit" class="btn btn-primary">
            Search
        </button>
    </form>

    <div class="table-surface">
        <table class="table table-bordered table-striped">
            <thead>
                <tr>
                    <th>@Html.DisplayNameFor(model => model.First().Name)</th>
                    <th>@Html.DisplayNameFor(model => model.First().Description)</th>
                    <th>@Html.DisplayNameFor(model => model.First().Price)</th>
                    <th>@Html.DisplayNameFor(model => model.First().ComponentTypeName)</th>
                    <th>Actions</th>
                </tr>
            </thead>

            <tbody>
                @foreach (var item in Model)
                {
                    <tr>
                        <td>@item.Name</td>
                        <td>@item.Description</td>
                        <td>@item.Price</td>
                        <td>@item.ComponentTypeName</td>
                        <td class="actions">
                            <div class="btn-group">
                                <a asp-action="Edit"
                                   asp-route-id="@item.Id"
                                   class="btn btn-outline-primary">Edit</a>

                                <a asp-action="Details"
                                   asp-route-id="@item.Id"
                                   class="btn btn-outline-primary">Details</a>

                                <a asp-action="Delete"
                                   asp-route-id="@item.Id"
                                   class="btn btn-outline-danger">Delete</a>
                            </div>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>

    <!-- Numerička paginacija -->
    <nav aria-label="Page navigation">
        <ul class="pagination justify-content-center">
            <!-- Previous -->
            <li class="page-item @(ViewBag.Page <= 1 ? "disabled" : "")">
                <a class="page-link"
                   href="?searchString=@ViewBag.SearchString&typeFilter=@ViewBag.ComponentTypes.SelectedValue&page=@(ViewBag.Page - 1)">
                    Previous
                </a>
            </li>

            <!-- Page numbers -->
            @{
                int startPage = Math.Max(1, ViewBag.Page - 5);
                int endPage = Math.Min(ViewBag.TotalPages, ViewBag.Page + 5);
            }

            @for (int i = startPage; i <= endPage; i++)
            {
                <li class="page-item @(i == ViewBag.Page ? "active" : "")">
                    <a class="page-link"
                       href="?searchString=@ViewBag.SearchString&typeFilter=@ViewBag.ComponentTypes.SelectedValue&page=@i">
                        @i
                    </a>
                </li>
            }

            <!-- Next -->
            <li class="page-item @(ViewBag.Page >= ViewBag.TotalPages ? "disabled" : "")">
                <a class="page-link"
                   href="?searchString=@ViewBag.SearchString&typeFilter=@ViewBag.ComponentTypes.SelectedValue&page=@(ViewBag.Page + 1)">
                    Next
                </a>
            </li>
        </ul>
    </nav>

</div>
