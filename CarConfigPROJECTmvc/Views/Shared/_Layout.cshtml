<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - CarConfigPROJECTmvc</title>

    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/CarConfigPROJECTmvc.styles.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/css/carConfigurator/CarConfigurator.css" />
    <link rel="stylesheet" href="~/css/Navbar.css" />

    @await RenderSectionAsync("Styles", required: false)
</head>

<body>
    <header>
        <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-light border-bottom box-shadow mb-3">
            <div class="container-fluid">
                <a class="navbar-brand" asp-area="" asp-controller="Home" asp-action="Index">
                    Car Configurator
                </a>

                <button class="navbar-toggler" type="button" data-bs-toggle="collapse"
                        data-bs-target=".navbar-collapse"
                        aria-controls="navbarSupportedContent"
                        aria-expanded="false"
                        aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>

                <div class="navbar-collapse collapse d-sm-inline-flex justify-content-between">

                    <!-- LIJEVO: glavni menu -->
                    <ul class="navbar-nav flex-grow-1">

                        <!-- svi vide samo Car Configurator -->
                        <li class="nav-item">
                            <a class="nav-link" asp-controller="CarConfigurator" asp-action="Index">Car Configurator</a>
                        </li>

                        @if (User.IsInRole("Admin"))
                        {
                            <li class="nav-item">
                                <a class="nav-link" asp-controller="Home" asp-action="Index">Home</a>
                            </li>

                            <li class="nav-item">
                                <a class="nav-link" asp-controller="Home" asp-action="Privacy">Privacy</a>
                            </li>

                            <li class="nav-item">
                                <a class="nav-link" asp-controller="Components" asp-action="Index">Components</a>
                            </li>

                            <li class="nav-item">
                                <a class="nav-link" asp-controller="ComponentType" asp-action="Index">Component Type</a>
                            </li>

                            <li class="nav-item">
                                <a class="nav-link" asp-controller="ComponentCompatibility" asp-action="Index">Components Compatibility</a>
                            </li>

                            <li class="nav-item">
                                <a class="nav-link" asp-controller="ConfiguratorOptions" asp-action="Index">Configurator Options</a>
                            </li>
                        }
                    </ul>


                    <!-- DESNO: auth -->
                    <ul class="navbar-nav ms-auto">

                        @if (User?.Identity?.IsAuthenticated == true)
                        {
                            <li class="nav-item">
                                <a class="nav-link nav-logout"
                                   asp-controller="User"
                                   asp-action="Logout">
                                    Logout
                                </a>
                            </li>
                        }
                        else
                        {
                            <li class="nav-item">
                                <a class="nav-link nav-register"
                                   asp-controller="User"
                                   asp-action="Register">
                                    Register
                                </a>
                            </li>

                            <li class="nav-item">
                                <a class="nav-link nav-login"
                                   asp-controller="User"
                                   asp-action="Login">
                                    Login
                                </a>
                            </li>
                        }

                    </ul>
                </div>
            </div>
        </nav>
    </header>

    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <footer class="border-top footer text-muted">
        <div class="container">
            &copy; 2025 - CarConfigPROJECTmvc -
            <a asp-controller="Home" asp-action="Privacy">Privacy</a>
        </div>
    </footer>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>

    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
